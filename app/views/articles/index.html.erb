<p><%= link_to 'Create new article', new_article_path, class: "btn btn-success" %></p>
<div class="panel panel-default">
  <div class="panel-heading">All Articles</div>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article) %> | <%=link_to 'Edit', edit_article_path(article) %> | <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure ?"} %></td>
            </tr>
        <% end %>
    </table>
</div>
