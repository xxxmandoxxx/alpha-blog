<div class="container">
<h2 align="center">All Articles</h2>
      <div class="panel-body">
          <div class="row col-xs-10 col-xs-offset-1">
            <p><%= link_to 'Create new article', new_article_path, class: "btn btn-success" %></p>
            <% @articles.each do |article| %>
              <div class="panel panel-default">
                <div class="panel-heading article-heading">
                    <%= article.title %>
                </div>
                <div class="panel-body">
                    <%= truncate(article.description, length: 100) %></br>
                    <small class="pull-right">Created by: <%= article.user.username if article.user %>
                                <%= time_ago_in_words(article.created_at) %> ago,
                                last updated: <% time_ago_in_words(article.updated_at) %> ago
                     </small>                   
                </div>
                <div class="panel-footer float-right">
                    <div class="btn-group"><%= link_to 'Show', article_path(article), class: "btn btn-md btn-success" %> 
                                        <%=link_to 'Edit', edit_article_path(article), class: "btn btn-md btn-primary" %>
                                        <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure ?"}, 
                                        class: "btn btn-md btn-danger" %>
                    </div>
                </div>
                </div>
            <% end %>
        </div>
    </div>
</div>


